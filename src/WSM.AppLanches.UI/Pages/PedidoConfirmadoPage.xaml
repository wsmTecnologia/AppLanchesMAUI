<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WSM.AppLanches.UI.Pages.PedidoConfirmadoPage"
             Title="Pedido Confirmado">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
        <Image Source="confirmado.gif" HeightRequest="300" WidthRequest="300" Aspect="AspectFit" />
        <Label Text="Seu pedido foi confirmado"  VerticalOptions="CenterAndExpand"  HorizontalOptions="Center" TextColor="DarkBlue" Margin="0,20,0,0"/>
        <Button Text="Retornar" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" x:Name="BtnRetornar" Clicked="BtnRetornar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>