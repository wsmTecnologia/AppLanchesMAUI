<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WSM.AppLanches.UI.Pages.MinhaContaPage"
             Title="Minha Conta">
    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        <VerticalStackLayout Grid.Row="0" BackgroundColor="Cyan" VerticalOptions="Start" Spacing="1" Padding="20">
            <ImageButton Source="user.png" HeightRequest="250" WidthRequest="250" CornerRadius="60" Padding="1" Aspect="AspectFill" x:Name="ImgBtnPerfil" />
            <Label x:Name="LblNomeUsuario" HorizontalOptions="Center" TextColor="Black" />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1" Spacing="20" Margin="20">
            <Entry Placeholder="Nome" x:Name="EntNome" />
            <Entry Placeholder="Email" x:Name="EntEmail" />
            <Entry Placeholder="Telefone" Keyboard="Telephone" x:Name="EntFone" />
            <Button Text="Salvar" FontAttributes="Bold" FontSize="Large" BackgroundColor="Cyan" TextColor="Maroon" x:Name="BtnSalvar" Clicked="BtnSalvar_Clicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>