<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WSM.AppLanches.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WSM.AppLanches.UI"
    xmlns:pages="clr-namespace:WSM.AppLanches.UI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#a90409"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="FloralWhite"
    NavigationPage.HasNavigationBar="False">

    <TabBar>
        <Tab Title="Home" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
        <Tab Title="Carrinho" Icon="cart">
            <ShellContent ContentTemplate="{DataTemplate pages:CarrinhoPage}" />
        </Tab>
        <Tab Title="Favoritos" Icon="heart">
            <ShellContent ContentTemplate="{DataTemplate pages:FavoritosPage}" />
        </Tab>
        <Tab Title="Perfil" Icon="profile">
            <ShellContent ContentTemplate="{DataTemplate pages:PerfilPage}" />
        </Tab>
    </TabBar>

</Shell>
